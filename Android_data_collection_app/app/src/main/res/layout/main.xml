<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_layout"
        android:background="#23c6fb"
        android:padding="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_below="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">


            <Button
                android:id="@+id/btn_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:layout_margin="6dp"
                android:text="@string/start"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/btn_export"
                android:layout_below="@+id/btn_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/export"
                android:layout_margin="6dp"
                android:background="@drawable/button_shape"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/btn_lockscreen"
                android:layout_below="@+id/btn_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show"
                android:layout_margin="6dp"
                android:background="@drawable/button_shape"
                android:textColor="#ffffff"
                />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/header"
        >

        <LinearLayout
            android:id="@+id/sampling_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampling Rate (Hz):" />

            <SeekBar
                android:id="@+id/sampling_rate_slider"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress"
                android:thumbTint="#00000000"/>

            <TextView
                android:id="@+id/sampling_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 Hz" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sampling_control"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrollview_border"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/touch_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="start to show"
                    android:textSize="14sp"
                    android:typeface="monospace" />
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lockscreen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:visibility="gone">
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/patternLockView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Please draw the unlock pattern"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <moe.kotorinminami.sensor.PatternLockView
            android:id="@+id/patternLockView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/patternDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patternLockView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#A0A0A0"
            android:textSize="14sp"
            android:text="Current pattern (click to reset)"/>

        <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/patternDisplay"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>


    </RelativeLayout>
</RelativeLayout>